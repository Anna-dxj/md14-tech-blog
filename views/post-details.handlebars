<article>
    <div>
        <h2>{{post.title}}</h2>
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
        <p>{{post.text}}</p>
    </div>
    <div>
        <h3>Comments:</h3>
        <div>
            <form>
                <h4>Leave a comment</h4>
                <input id="comment-input" name="comment" type="textarea" data-comment-id="{{comment.post_id}}"/>
                <button type="submit" id="comment-submit-btn">Comment</button>
            </form>
        </div>
        <div>
            <h5>Comments</h5>
            <div>
            {{#each comments as |comment|}}
                <p>{{comment.text}}:</p>
                <p>- {{comment.user.name}}, {{format_date comment.date_created}}</p>
            {{/each}}
            </div>
        </div>
    </div>
</article>
 <script src="../js/comment.js"></script>